(defvar current-date-time-format "%a %b %d %H:%M:%S %Z %Y"
  "Format of date to insert with `insert-signature' func.
See help of `format-time-string' for possible replacements")

(defun insert-signature ()
  "insert signature with timestamp into current buffer. Uses
`current-date-time-format' for formatting date and time"
  (interactive)
  (insert "~Donald Kruse [")
  (insert (format-time-string current-date-time-format (current-time)))
  (insert "]")
)


